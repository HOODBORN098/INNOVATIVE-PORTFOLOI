# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/portfolio_projects
MONGODB_DB_NAME=portfolio_projects

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
CONTACT_EMAIL=ericwambua098@gmail.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
WEATHER_API_KEY=your-weather-api-key-here
GOOGLE_BOOKS_API_KEY=your-google-books-api-key-here
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Book Recommendation System
BOOKS_API_URL=https://www.googleapis.com/books/v1/volumes
GOODREADS_API_KEY=your-goodreads-api-key-here

# Network Security Tools
NMAP_PATH=/usr/bin/nmap
SECURITY_SCAN_ENABLED=true
MAX_SCAN_TARGETS=100

# Weather Data APIs
OPENWEATHER_API_KEY=your-openweather-api-key-here
WEATHERSTACK_API_KEY=your-weatherstack-api-key-here

# Campus Events Configuration
EVENTS_TIMEZONE=Africa/Nairobi
TICKET_PAYMENT_GATEWAY=stripe
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Student Management System
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
SMS_FROM_NUMBER=+1234567890

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-tracking-id-here
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-s3-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Development Tools
DEBUG=app:*
SEED_DATABASE_ON_START=false
MOCK_EXTERNAL_APIS=false

# Production Deployment
CLUSTER_MODE=false
WORKERS=4
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000